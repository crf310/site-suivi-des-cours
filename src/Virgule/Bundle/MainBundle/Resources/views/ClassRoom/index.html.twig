<div class="widget-box">
    <div class="widget-title">
        <span class="icon">
            <i class="icon-th"></i>
        </span>
        <h5>Salles disponibles dans cette délégation</h5>
    </div>
    <div class="widget-content nopadding">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Commentaires</th>
                </tr>
            </thead>
            <tbody>                
            {% if classRooms is not empty %}
                {% for classRoom in classRooms %}
                    <tr>
                        <td>{{ classRoom['classroom_name'] }}</td>
                        <td>{{ classRoom['classroom_address'] }} (<a href="#showGoogleMap{{ loop.index }}" data-toggle="modal">carte</a>)</td>
                        <td>{{ classRoom['classroom_comments'] }}</td>
                    </tr>
                {% endfor %}                    
            {% else %}
                <tr>
                    <td colspan="3">Aucune salle n'est associée à cette délégation</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% if classRooms is not empty %}
    {% for classRoom in classRooms %}
        {% include '::google_map.html.twig' with { 'mapId' : loop.index, 'address': classRoom['classroom_address'] } %}
    {% endfor %}                    
{% endif %}