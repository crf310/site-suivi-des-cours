{% if comments.count > 0 %}
<div class="widget-box">
    <div class="widget-title">
        <span class="icon"><i class="icon-comment"></i></span>
        <h5>Commentaires</h5><span title="{{ comments.count }} commentaire(s)" class="label label-info tip-left">{{ comments.count }}</span>
    </div> 
    <div class="widget-content">
        {% for comment in comments %}
                <span class="user">
                    Par <a href="{{ path('teacher_show', { 'id': comment.teacher.id }) }}">{{ comment.teacher.firstName }}  {{ comment.teacher.lastName }}</a> le  {{ comment.date|date("d/m/Y Ã  H:i") }}
                </span>
                <p class="comment-bubble">
                    {{ comment.comment|raw }}
                </p>
        {% endfor %}
    </div>
</div>
{% endif %}