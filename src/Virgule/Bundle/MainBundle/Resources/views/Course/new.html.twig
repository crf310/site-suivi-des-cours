{% extends '::main_content.html.twig' %}
{% block content_title %}Enregistrer un nouveau cours{% endblock %}
 {%block submenu %}{% endblock %}
{% block main_content %}
<div class="row">
    <div class="col-md-12 center">
        <form action="{{ path('course_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            <div class="widget-box">
                {% include 'VirguleMainBundle:Course:form.html.twig' with { 'form': form }  %}
            </div>
            <div class="form-actions">                                     
                <input class="btn btn-success" type="submit" name="save" value="Enregistrer le cours"/> <input class="btn" type="submit" name="save_and_add_new" value="Enregistrer et ajouter un autre" />
            </div>
        </form>
    </div>
</div>
{% endblock %}