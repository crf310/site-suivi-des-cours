{% extends '::main_content.html.twig' %}
{% block content_title %}Créer un nouveau compte utilisateur{% endblock %}
 {%block submenu %}{% endblock %}
{% block main_content %}
<form action="{{ path('teacher_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            <!--
        <div class="alert alert-error alert-block">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading">Erreur dans la saisie</h4>
        {{ form_errors(form) }}
    </div>-->
    <div class="widget-box">
        <div class="widget-title">
                <span class="icon">
                        <i class="icon-align-justify"></i>									
                </span>
                <h5>Informations de connexion</h5>
        </div>
        <div class="widget-content nopadding">
                    {{ form_row(form.isActive, { 'checked':'checked', 'label': 'Formateur en activité', 'hint':'Cochez la case si l\'utilisateur doit être actif' }) }}
                    {{ form_row(form.lastName, { 'label': 'Nom' }) }}
                    {{ form_row(form.firstName, { 'label': 'Prénom' }) }}
                    {{ form_row(form.username, { 'label': 'Nom d\'utilisateur' }) }}
                    {{ form_row(form.password.first, { 'label': 'Mot de passe', 'hint':'Choisissez un mot de passe d\'au moins 8 caractères. Vous pouvez prendre une phrase, si cela est plus facile à retenir' }) }}
                    {{ form_row(form.password.second, { 'label': 'Confirmez le mot de passe' }) }}
        </div>
    </div>
    <div class="widget-box">
        <div class="widget-title">
                <span class="icon">
                        <i class="icon-align-justify"></i>									
                </span>
                <h5>Coordonnées</h5>
        </div>
        <div class="widget-content nopadding">
                    {{ form_row(form.phoneNumber, { 'label': 'Téléphone fixe' }) }}
                    {{ form_row(form.cellphoneNumber, { 'label': 'Téléphone portable' }) }}
                    {{ form_row(form.emailAddress, { 'label': 'Adresse email' }) }}
                    {{ form_rest(form) }}
                    <div class="form-actions">                                     
                        <input class="btn" type="submit" value="Créer le compte" />
                    </div>
        </div>
    </div>        
</form>
{% endblock %}