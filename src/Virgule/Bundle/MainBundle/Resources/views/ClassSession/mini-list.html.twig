<div class="widget-box">
    <div class="widget-title">
        <span class="icon">
                <i class="icon-th-list"></i>
        </span>
        <h5>{{ title }}</h5>
        <span title="{{ classSessions | length }} compte-rendus" class="label label-info tip-left">{{ classSessions | length }}</span>
    </div>
    <div class="widget-content">
        <div class="left_list">
            <ul>
            {% if classSessions is empty %}
                Aucun compte-rendu enregistr√© pour le moment.
            {% else %}
                {% for classSession in classSessions %}
                    <li>
                        <a href="{{ path('classsession_show', { 'id': classSession.id }) }}">{{ classSession.sessionDate | date("d/m/Y") }}</a>
                        {% if classSession.nb_comments > 0 %}
                            <img src="{{ asset('img/icons/comment.png') }}" title="{{ classSession.nb_comments }} commentaire(s)" alt="{{ classSession.nb_comments }} commentaire(s)" />
                        {% endif %}
                    </li>
                    {% if loop.index % listBreak == 0  and loop.index != loop.last %}
                        </ul></div><div class="left_list"><ul>
                    {% endif %}
                {% endfor %}
            {% endif %}
            </ul>
        </div>           
        <div class="clear_list"></div>
        {% if displayAllClassSessionsButton is defined and displayAllClassSessionsButton == true %}
            <p><a class="btn virgule-btn" href="{{ path('classsession_index') }}"><i class="icon-go"></i> Voir tous les compte-rendus</a></p>
        {% endif %}
    </div>
</div>